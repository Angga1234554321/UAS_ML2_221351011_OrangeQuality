<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/app_bar_layout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="15dp"
            android:text="Storyline"
            android:textColor="#333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi ini dikembangkan untuk memprediksi kualitas jeruk berdasarkan fitur fisik dan kimia dari buah.\n\nDataset diambil dari Kaggle (Orange Quality Dataset), lalu dilatih menggunakan TensorFlow dan dikonversi ke format TFLite agar bisa dijalankan di Android."
            android:textSize="16sp"
            android:justificationMode="inter_word"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Link Dataset: https://www.kaggle.com/datasets/shruthiiiee/orange-quality"
            android:textColor="#0000EE"
            android:autoLink="web"
            android:linksClickable="true"
            android:textSize="16sp"
            android:justificationMode="inter_word"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cara Kerja Aplikasi"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pengguna dapat memasukkan data jeruk seperti berat, kadar asam, kadar gula, dll., lalu aplikasi akan memprediksi apakah jeruk tersebut berkualitas baik atau tidak."
            android:textSize="16sp"
            android:justificationMode="inter_word"
            android:textColor="#333333"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Made by Anggarana Gustianti"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="#333333"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>

<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Tema utama tanpa ActionBar -->
    <style name="Theme.OrangeQuality" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#FFA500</item> <!-- Orange -->
        <item name="colorPrimaryVariant">#FF8C00</item> <!-- Darker Orange -->
        <item name="colorOnPrimary">#FFFFFF</item> <!-- White text/icon on AppBar -->
        <item name="android:statusBarColor">#FF8C00</item> <!-- Status bar -->
    </style>

    <!-- Tema khusus SplashScreen -->
    <style name="Theme.OrangeQuality.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">#FF8C00</item>
    </style>

</resources>
